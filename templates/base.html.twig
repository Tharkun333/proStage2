<!DOCTYPE html>
<html>
    <head>
    

        <meta charset="UTF-8">
        <title>{% block title %}ProStages{% endblock %}</title>
        
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

        <meta name="viewport" content="width=device-width, initial-scale=1">

       
        
        <!-- bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- bootstrap -->
        <link rel="stylesheet" href="{{asset('/CSS/MONcss.css')}}">
        
        </style>
        <!-- bootstrap -->
         {% block stylesheets %}
        {% endblock %}

        

        
        {% block javascripts %}
        {% endblock %}
    </head>

    <body>
    
        
       
        <div class="container-fluid-premier">
            <!-- Haut de pages-->
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-4">
                        
                        </div>
                        <div class="col-md-4">
                        <img alt="Logo" src="{{asset('/image/PRo.png')}}" height="200px" class="rounded-circle" />
                        </div>
                        
                        <div class="col-md-4">
                        {% if is_granted ('ROLE_USER') %}
                        
                        <a class="flex-sm-fill text-sm-right nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a>
                        {% else %}
                        <a class="flex-sm-fill text-sm-right nav-link" href="{{path('app_login')}}">Connexion</a>
                        <a class="flex-sm-fill text-sm-right nav-link" href="{{path('inscription')}}">Inscription</a>   
                        {% endif %}
                         

                        </div>
                    </div>
                    
                    <div class="row-fluid">
                        <nav class="nav nav-pills flex-column flex-sm-row nav-justified">
                        
                            <a class="flex-sm-fill text-sm-center nav-link" href="{{path('pro_stages_Accueil')}}">Accueil</a>
                            
                            <a class="flex-sm-fill text-sm-center nav-link " href="{{path('entreprise')}}"> Entreprises</a>
                            
                            <a class="flex-sm-fill text-sm-center nav-link" href="{{path('formations')}}"> Formations</a>
                            
                            {% if is_granted ('ROLE_ADMIN') %}
                            <a class="flex-sm-fill text-sm-center nav-link" href="{{path('formulaireEntreprise')}}">Ajouter une Entreprise</a> 
                            
                            {% else %}
                            <a class="flex-sm-fill text-sm-center nav-link list-group-action disabled" href="{{path('formulaireEntreprise')}}">Ajouter une Entreprise</a>
                              
                            {% endif %}
                            
                            <a class="flex-sm-fill text-sm-center nav-link" href="{{ path('formation_new') }}">Ajouter formation</a>
                            <a class="flex-sm-fill text-sm-center nav-link" href="{{path('formulaireStage')}}">Ajouter un Stage</a>               
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        

         {% block Contenu %}{% endblock %}
        {% block PiedPage %}{% endblock %}





        
        <!-- Option 1: Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <!-- Option 1: Bootstrap Bundle with Popper -->
    </body>

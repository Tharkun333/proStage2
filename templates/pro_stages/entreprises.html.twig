{% extends 'base.html.twig' %}

{% block Contenu %}
<table class="table table-striped table-hover">
    <thead>
        <tr>
        <th scope="col">Entreprise</th>
        <th scope="col">Nom</th>
        <th scope="col">URL</th>
        {% if is_granted ('ROLE_ADMIN') %}
            <th scope="col">Modifier</th>
        {% endif %}
        
        <th scope="col">Stages proposés</th>
        </tr>
    </thead>
    {% for entreprise in entreprises %}
        <tbody>
            <tr>
                <th scope="row">{{entreprise.id}}</th>
                <td>{{entreprise.nom}}</td>
                <td>{{entreprise.urlSite}}</td>
                {% if is_granted ('ROLE_ADMIN') %}
                <td><a class="nav-link" href="{{path('formulaireEntrepriseModification',{id:entreprise.id})}}"><h5>+</h5></a></td>
                {% endif %}
                
                <td><a class="stage" href="{{path('entrepriseStages',{nom:entreprise.nom})}}">Voir</a></td>
            </tr>
        </tbody>
    {% endfor %}

</table>

<!--gpeyrelongue_sym pour se connecter a la base de donnée-->
{% endblock %}


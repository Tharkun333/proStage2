{% extends 'base.html.twig' %}

{% block Contenu %}
<table class="table table-striped table-hover">
    <thead>
        <tr>
        <th scope="col">Formation</th>
        <th scope="col">Abréviation</th>
        <th scope="col">Nom Complet</th>
        <th scope="col">Stages en rapport</th>
        </tr>
    </thead>
    {% for formation in formations %}
        <tbody>
            <tr>
                <th scope="row">{{formation.id}}</th>
                <td>{{formation.nomCourt}}</td>
                <td>{{formation.nom}}</td>
                <td><a class="stage" href="{{path('formationStages',{nom:formation.nom})}}">Voir</a></td>
            </tr>
        </tbody>
    {% endfor %}

</table>

<!--gpeyrelongue_sym pour se connecter a la base de donnée-->
{% endblock %}